<p id="notice"><%= notice %></p>

<h1>Trajets</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Origine</th>
      <th>Destination</th>
      <th>Motif</th>
      <th>Distance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trajets.each do |trajet| %>
      <tr>
        <td><%= trajet.date %></td>
        <td><%= trajet.origine %></td>
        <td><%= trajet.destination %></td>
        <td><%= trajet.motif %></td>
        <td><%= trajet.distance %></td>
        <td><%= link_to 'Show', trajet %></td>
        <td><%= link_to 'Edit', edit_trajet_path(trajet) %></td>
        <td><%= link_to 'Destroy', trajet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', '/' %>
<%= link_to 'New Trajet', new_trajet_path %>
